---
import Analytics from "../components/Analytics.astro";
import { AstroSeo } from "@astrolib/seo";
import { CONFIG } from "@/config";
---

<html lang="tr">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=5.0"
    />
    <AstroSeo {...CONFIG.seo} />
    <meta name="theme-color" content="#000000" />
    <meta name="author" content="BuharTR" />
    <meta name="robots" content="all" />
    <link rel="sitemap" href="/sitemap.xml" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <title>{CONFIG.seo.title}</title>
    <style>
      body {
        background-color: black;
        height: 100vh;
        margin: 0;
        position: relative;
        user-select: none;
        pointer-events: none;
      }

      #logo,
      #fourteen {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      }

      #logo {
        width: 400px;
        max-width: 65vw;
        height: auto;
      }

      #sixteen {
        color: white;
        font-size: min(5vw, 2rem);
        font-family: "Courier New", Courier, monospace;
        line-height: 1;
        animation: blink 1s infinite;
      }

      @keyframes blink {
        0% {
          opacity: 1;
        }
        50% {
          opacity: 0.5;
        }
        100% {
          opacity: 0.5;
        }
      }
    </style>
    <script>
      const fourteen = document.getElementById("fourteen");

      const countDownDate = new Date("Jan 11, 2025 00:00:00").getTime();

      const updateCountdown = () => {
        const distance = countDownDate - new Date().getTime();
        const totalSeconds = Math.max(0, Math.floor(distance / 1000));

        if (fourteen) {
          fourteen.textContent = totalSeconds.toString().padStart(7, "0");
        }

        if (distance < 0) {
          clearInterval(intervalId);
        }
      };

      const intervalId = setInterval(updateCountdown, 1000);

      updateCountdown();
    </script>
    <Analytics />
  </head>
  <body>
    <img id="logo" src="/buhartr.webp" alt="BuharTR Logosu" />
    <span id="fourteen"></span>
  </body>
</html>
